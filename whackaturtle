import turtle as trtl
import random as rand

wn = trtl.Screen()
wn.setup(width=593, height=362)
wn.bgpic("background.gif")
wn.tracer(0)
wn.update()

painter = trtl.Turtle()
counter = trtl.Turtle()

font_setup = ("Arial", 20, "normal")

timer = 15
counter_interval = 1000
timer_up = False

def countdown():
    global timer, timer_up
    counter.clear()

    if timer <= 0:
        counter.write("Time's Up", font=font_setup)
        timer_up = True
    else:
        counter.write("Timer: " + str(timer), font=font_setup)
        timer -= 1
        wn.ontimer(countdown, counter_interval)

mole_image = "mole.gif"
wn.addshape("mole.gif")

mole = trtl.Turtle()
mole.shapesize(stretch_wid=5, stretch_len=5)

def draw_mole(active_mole):
  active_mole.shape(mole_image)
  mole.shapesize(stretch_wid=0.3, stretch_len=0.3)
  wn.update()

coordinates = [(0,0), (0,50), (0,-50)]
# rand_position = rand.choice(coordinates)
def mole_clicked(x, y):
    mole.hideturtle()
    mole.penup()
    mole.goto(rand.choice(coordinates))
    mole.showturtle()
mole.onclick(mole_clicked)

draw_mole(mole)

countdown()

wn.mainloop()
